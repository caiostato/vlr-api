generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  name          String
  type          String
  role          String
  alias         String
  acs           Float   @default(0)
  adr           Float   @default(0)
  assistsPr     Float   @default(0)
  currentScore  Int     @default(0)
  deaths        Int     @default(0)
  externalId    String  @id
  fdpr          Float   @default(0)
  fkpr          Float   @default(0)
  imageUrl      String
  kast          Float   @default(0)
  kd            Float   @default(0)
  kills         Int     @default(0)
  oldScore      Int     @default(0)
  playerId      Int     @unique
  previousScore Int     @default(0)
  rating        Float   @default(0)
  teamId        String?
  team          Team?   @relation(fields: [teamId], references: [externalId])
}

model Match {
  match      Int    @unique
  status     String
  externalId String @id
  matchId    Int    @unique
  teams      Team[] @relation("MatchToTeam")
}

model Team {
  name       String
  logo       String
  externalId String   @id
  teamId     Int      @unique
  players    Player[]
  matches    Match[]  @relation("MatchToTeam")
}
